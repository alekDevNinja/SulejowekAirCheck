<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left">

        <TextView
            android:id="@+id/textView_sensorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sensor " />

        <TextView
            android:id="@+id/textView_pm25value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="... " />

        <TextView
            android:id="@+id/textView_pm25Name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ug/m3 (PM2.5) " />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_percentageValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="... " />

        <TextView
            android:id="@+id/textView_percentageName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%" />

    </LinearLayout>


</LinearLayout>