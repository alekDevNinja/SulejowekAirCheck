<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/widget_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/appwidget_text"
        android:textAlignment="center"
        android:textColor="@color/widget_text_color"
        android:textSize="@dimen/widget_size" />

    <TextView
        android:id="@+id/widget_pm_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_text_view"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:layout_margin="8dp"
        android:layout_toStartOf="@+id/appwidget_text"
        android:background="@color/colorAccent"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/sulejowek_air_check"
        android:textAlignment="center"
        android:textColor="@color/widget_text_color"
        android:textSize="@dimen/widget_size"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/appwidget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_text_view"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:background="@color/colorAccent"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/sulejowek_air_check"
        android:textAlignment="center"
        android:textColor="@color/widget_text_color"
        android:textSize="@dimen/widget_size"
        android:textStyle="bold|italic" />


</RelativeLayout>